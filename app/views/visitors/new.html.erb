<% content_for :title do %>Foobar Kadigan<% end %>
<% content_for :description do %>Website of Foobar Kadigan<% end %>

<%= image_tag "http://lorempixel.com/1170/600/cats/1" %>
<div style="text-align: center; margin-top: 20px">
	<div class="row">
		<div class="large-6 columns">
			<h2>Stay in touch.</h2>
		</div>
		<div class="large-6 columns">
			<%= simple_form_for @visitor do |f| %>
				<%= f.error_notification %>
				<%= f.input :email, 
					label: false, 
					placeholder: 'Your email address...' %>
				<br />
				<%= f.submit "Sign up for newsletter", class: "button radius" %>
			<% end %>
		</div>
	</div>
</div>